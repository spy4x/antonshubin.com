extends ../../partials/layout
block variables
  - var title = 'Blog | Anton Shubin'
  - var description = 'Aggregation of my thoughts regarding web development, SaaS-startups and Arduino'

mixin blogArticlePreview(article)
  .mt-16.mb-10
    a(href='/blog/'+article.url)
      img.rounded-lg(src=article.previewURL alt="Article preview")
      .flex.text-gray-400.my-4.items-center
        p May 02, 2022
        .ml-auto Time reading: 5 min
      h1.h2 #{article.title}


block content
  .max-w-xl.mx-auto
    h1.h1.text-center Blog
    each article in data.blogArticles
      +blogArticlePreview(article)
