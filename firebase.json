{
  "hosting": {
    "public": "dist",
    "predeploy": ["yarn build"],
    "headers": [
      {
        "source": "/api{,/**}",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store"
          }
        ]
      },
      {
        "source": "**/*.@(html|js|css|jpg|jpeg|gif|png|svg|ico|eot|ttf|woff|woff2|txt)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          },
          {
            "key": "Content-Encoding",
            "value": "br"
          }
        ]
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  }
}
